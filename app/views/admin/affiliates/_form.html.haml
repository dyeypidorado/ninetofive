= form_for [:admin, @affiliate] do |f|
  -if @affiliate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@affiliate.errors.count, "error")} prohibited this admin_affiliate from being saved:"
      %ul
        - @affiliate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'

