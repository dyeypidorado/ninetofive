= form_for([@product, @subscriber]) do |f|
  - if @subscriber.errors.any?
    %div#error_explanation
      %h2%= pluralize(@subscriber.errors.count, "error") + prohibited this subscriber from being saved:

      %ul
        - @subscriber.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :name
    %br
    = f.text_field :name

  %div.field
    = f.label :email
    %br
    = f.text_field :email

  %div.actions
    = f.submit "I want to sign up!", :class => "button"

